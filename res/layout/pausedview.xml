<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayoutRootPaused"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroudwood" >

    <ImageView
        android:id="@+id/pausedV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/buttonpaused" />

    <RelativeLayout
        android:id="@+id/RelativeLayoutSoundMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pausedV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" >

        <ImageView
            android:id="@+id/soundVP"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="30dp"
            android:src="@drawable/sound" />

        <ImageView
            android:id="@+id/musicVP"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/soundVP"
            android:src="@drawable/music" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayoutContinueReplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/RelativeLayoutSoundMusic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" >

        <ImageView
            android:id="@+id/continueV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/buttoncontinue" />

        <ImageView
            android:id="@+id/replayV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/continueV"
            android:src="@drawable/buttonreplay" />

    </RelativeLayout>

</RelativeLayout>